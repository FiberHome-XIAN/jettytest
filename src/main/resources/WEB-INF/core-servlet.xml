            <!--<mvc:mapping path="/**"/>-->
            <!--<mvc:exclude-mapping path="/static/**"/>-->
            <!--<bean class="com.fiberhome.nebula.kafka.interceptor.AuthKafkaInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->
</beans>